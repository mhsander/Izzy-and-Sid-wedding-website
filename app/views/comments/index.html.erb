<h1>Wall</h1>

<%= form_with scope: :comment, url: comments_path, local: true do |form| %>
  <p>
    <%= form.label :Name %><br>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.label :Comment %><br>
    <%= form.text_area :text %>
  </p>

  <%= form.submit %>

<% end %>

<% @comments.each do |comment| %>
  <p>
    <%= comment.name %><br>
    <%= comment.text %>
  </p>

<% end %>

<%= render 'welcome/down_navigation' %>